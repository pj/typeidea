{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "lib": ["ES2017", "ESNext.AsyncIterable", "dom"],
    "target": "ES2017",
    "jsx": "react",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./client",
    "paths": {
      "~*": ["./*"]
    },
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "client",
    "lib"
  ]
}
